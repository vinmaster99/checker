<p>Last checked on: <%= @timestamp %></p>
<div class="datagrid">
  <table>
    <thead>
      <tr>
        <th>Site url</th>
        <th>Status</th>
        <th>Link</th>
      </tr>
    </thead>
    <tbody>
      <% @result.each_with_index do |value, i| %>
        <tr class="domain <%= (i % 2 == 0)? "alt" : "" %>">
          <% site, status, labels = value['domain'], value['status'], value['labels'] %>
          <td><%= site %></td>
          <td>
            <% if status == true %>
              <img src="/ok.png">
            <% else %>
              <img src="/error.png">
            <% end %>
          </td>
          <td><a href="<%= site %>" target="_blank">Link</a></td>
        </tr>
        <% labels.each do |label_hash| %>
          <% label, l_status = label_hash['label'], label_hash['status'] %>
          <tr class="subdomain" style="display: none; background-color: lightgray;">
            <td style="padding-left: 5em;"><%= label %></td>
            <td>
              <% if l_status == true %>
                <img src="/ok.png">
              <% else %>
                <img src="/error.png">
              <% end %>
            </td>
            <td><a href="<%= site+label %>" target="_blank">Link</a></td>
          </tr>
        <% end %>
      <% end %> 
    </tbody>
  </table>
</div>
